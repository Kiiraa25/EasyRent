{% extends 'base.html.twig' %}

{% block title %}Mes véhicules{% endblock %}

{% block stylesheets %}
    <style>
        .vehicle-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .vehicle-item {
            background-color: #fdfdfd;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .vehicle-item:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .vehicle-item h3 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #282F4B; /* Couleur sombre pour le titre du véhicule */
        }

        .vehicle-item p {
            margin: 5px 0;
            color: #555; /* Couleur pour les détails */
        }

        .vehicle-item strong {
            color: #282F4B; /* Couleur sombre pour les textes en gras */
        }

        .vehicle-item a {
            display: inline-block;
            margin-top: 10px;
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .vehicle-item a:hover {
            text-decoration: underline;
        }

        .vehicle-item .reserve-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #EB8072; /* Couleur chaude pour le bouton "Réserver" */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .vehicle-item .reserve-button:hover {
            background-color: #d96d61; /* Effet au survol du bouton "Réserver" */
        }

        .no-vehicles {
            text-align: center;
            font-size: 18px;
            margin-top: 50px;
            color: #282F4B;
        }

        .add-vehicle-btn {
            display: block;
            text-align: center;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .add-vehicle-btn:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
<main>
    <h1 class="text-center">Véhicules</h1>

    {% if vehicles is empty %}
        <p class="no-vehicles">Il n'y a aucun véhicule disponible</p>
    {% else %}
        <div class="vehicle-list">
            {% for vehicle in vehicles %}
                <div class="vehicle-item">
                    <h3>Modèle : {{ vehicle.model.name }}</h3>
                    <p><strong>Propriétaire :</strong> {{ vehicle.owner.profile.firstName }} {{ vehicle.owner.profile.lastName }}</p>
                    <p><strong>Kilométrage :</strong> {{ vehicle.mileage }} km</p>
                    <p><strong>Couleur :</strong> {{ vehicle.color }}</p>
                    <p><strong>Tarif par jour :</strong> {{ vehicle.pricePerDay }} €</p>
                    <a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">Voir détails</a>
                    <a href="{{ path('app_rental_new', {'vehicle_id': vehicle.id}) }}" class="reserve-button">Réserver</a>

                </div>
            {% endfor %}
        </div>
    {% endif %}

</main>
{% endblock %}
