{% extends 'dashBoard/dashBoardBase.html.twig' %}

{% block importmap %}
	{{ importmap(['app', 'register', 'profileVerification', 'dashbordStyle']) }}
{% endblock %}

{% block title %}Vérifier mon profile{% endblock %}

{% block content %}

<main>
<section class="blue-form display-center" action="">
<h2> Vérifier mon profil </h2>

<div class="step-indicators">
      <div class="step" data-step="0">1</div>
      <div class="step" data-step="1">2</div>
      <div class="step" data-step="2">3</div>
    </div>

	

{{ form_errors(form) }}

				{{ form_start(form) }}
				
				<div class="blue-form-div personalInfo display-center">
				<h3>Informations personnelles</h3>
				{{ form_row(form.picture,{ label: 'Photo de profil'}) }}
				{{ form_row(form.lastName,  { label: 'Prénom'}) }}
				{{ form_row(form.firstName,  { label: 'Nom'}) }}
				{{ form_row(form.birthDate,  { label: 'Date de naissance'}) }}
				{{ form_row(form.phone,{ label: 'Numéro de téléphone'}) }}
				</div>


				<div class="blue-form-div drivingLicenseInfo display-center hidden">
				<h3>Permis de conduire</h3>
				{{ form_row(form.drivingLicense.licenseNumber) }}
				{{ form_row(form.drivingLicense.issueDate) }}
				{{ form_row(form.drivingLicense.expiryDate) }}
				{{ form_row(form.drivingLicense.countryOfIssue) }}
				{{ form_row(form.drivingLicense.frontImagePath) }}
				{{ form_row(form.drivingLicense.backImagePath) }}
				</div>


				<div class="blue-form-div addressInfo display-center hidden">
				<h3>Adresse</h3>
				{{ form_row(form.address,{ label: 'Adresse'}) }}
				{{ form_row(form.postalCode,{ label: 'Code postal'}) }}
				{{ form_row(form.city,{ label: 'Ville'}) }}
				{{ form_row(form.country,{ label: 'Pays'}) }}
				</div>
				
				<button class="nav-button hidden prev">Précedent</button>
				<button class="nav-button next">suivant</button>
				<button type="submit" class="nav-button sendProfile hidden">Envoyer</button>
				{{ form_end(form) }}


</section>



</main>
{% endblock %}
