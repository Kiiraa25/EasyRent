{% extends 'base.html.twig' %}

{% block importmap %}
	{{ importmap(['app', 'register']) }}
{% endblock %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<main>
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		

			<section class="register-login-section">

				<article class="subscribe-form display-center">
					<h2>Nous sommes ravis de vous revoir !</h2>

					
					<input class="suscribe-input" placeholder="Email" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
					
					<input class="suscribe-input" placeholder="Mot de passe" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

					<a href="/reset-password">Mot de passe oubli√© ?</a>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button type="submit" class="nav-button">Me connecter</button>

				</article>

				<article class="login-section">
					<div class="login-section-content">
						<h2>Vous n'avez pas encore
							<br>
							de compte ?</h2>
						<p>Inscrivez-vous en quelques minutes !</p>
						<a href="{{path('app_register')}}"><button class="nav-button">
							M'inscrire</button></a>
					</div>

				</article>
			</section>

		


		{#
				            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				            See https://symfony.com/doc/current/security/remember_me.html
				
				            <div class="checkbox mb-3">
				                <input type="checkbox" name="_remember_me" id="_remember_me">
				                <label for="_remember_me">Remember me</label>
				            </div>
				        #}

		
	</form>
    </main>
{% endblock %}

{% block footer %}
    
{% endblock %}
